<comment>
problem   = Uranus Double Gray Test

<job>
problem_id = 3duranus   # problem ID: basename of output filenames
tasklist   = ImplicitHydroTasks

<output0>
file_type  = rst
dt         = 8.64E8

<output1>
file_type  = hst          # History data dump
dt         = 8.64E5      # time increment between outputs

<output2>
file_type  = pnetcdf      # Binary data dump
variable   = prim         # variables to be output
dt         = 2.16E6      # time increment between outputs

<output3>
file_type  = pnetcdf
variable   = uov
dt         = 2.16E6      # time increment between outputs

<output4>
file_type  = pnetcdf
variable   = rad
dt         = 2.16E6      # time increment between outputs

#<output5>
#file_type  = dbg
#dt         = 1

<time>
cfl_number = 1.          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = -1           # cycle limit
tlim       = 1.E14        # time limit
xorder     = 5            # horizontal reconstruction order
integrator = rk3          # integration method
ncycle_out  = 100
#shock_capture = true

<mesh>
nx1        = 80          # Number of zones in X1-direction
x1min      = 2.515E7         # minimum value of X1
x1max      = 2.55E7       # maximum value of X1
ix1_bc     = reflecting   # inner-X1 boundary flag
ox1_bc     = reflecting   # outer-X1 boundary flag

nx2        = 240           # Number of zones in X2-direction
x2min      = 0.     # minimum value of X2
x2max      = 1.E3      # maximum value of X2
ix2_bc     = periodic        # inner-X2 boundary flag
ox2_bc     = periodic        # outer-X2 boundary flag

nx3        = 360          # Number of zones in X3-direction
x3min      = 0.0          # minimum value of X3
x3max      = 1.E3      # maximum value of X3
ix3_bc     = periodic     # inner-X3 boundary flag
ox3_bc     = periodic     # outer-X3 boundary flag

<meshblock>
nx1        = 80
nx2        = 10
nx3        = 10

<hydro>
grav_acc1   = -9.01
gamma       = 1.4         # gamma = C_p/C_v
implicit_flag = 9

<species>
vapor = H2S, CH4
cloud = H2S(c), CH4(c), H2S(p), CH4(p)

<thermodynamics>
#Rd          = 3149.       # Gas constant
Rd          = 3587.   # mu = 2.3175 g/mol

eps1        = 14.67   14.67   14.67
rcp1        = 0.078   0.16    0.16
beta1       = 0.      23.67   23.67
Ttriple1    = 187.7
Ptriple1    = 23200.

eps2        = 6.9    6.9    6.9
rcp2        = 0.078   0.16    0.16
beta2       = 0.      10.15   10.15
Ttriple2    = 90.67
Ptriple2    = 11690.

sa.relax    = 1.0
sa.max_iter = 10
sa.ftol     = 0.1

<chemistry>
microphysics_config = h2s-ch4.yaml

<astronomy>
planet        = HJ
HJ.parent     = Sun
HJ.re         = 2.5362E4      # km
HJ.rp         = 2.5362E4      # km
HJ.obliq      = 97.77        # deg
HJ.spinp      = 0.72        # day
HJ.orbit_a    = 19.165        # au
HJ.orbit_e    = 0.
HJ.orbit_i    = 0.        # deg
HJ.orbit_p    = 3.06E3        # day
HJ.grav_eq    = 9.01       # m/s^2
HJ.equinox    = 0.

<radiation>
dt            = 400.
nstr          = 4
radiation_config = u3d.yaml
relax_time    = 1.E4

<forcing>
packages = top_sponge_lyr, relax_bot_temp
top_sponge_lyr.tau     = 1.E3
top_sponge_lyr.width   = 2.E4
relax_bot_temp.tem     = 250.
relax_bot_temp.tau     = 1.E3

<problem>
T0         = 250.            # Surface temperature, K
P0         = 5.E6             # Surface pressure, Pa
Omega      = 1.01E-4             # Rotational frequency
Tmin       = 52.
radius     = 2.515E7
qH2S.ppmv   = 300.
qCH4.ppmv   = 23000.
Omega_f     = 1.73E-4
beta_f      = 4.92E-12
center_deg  = 20.
init_Ttol   = 2.
#diagnostics = div, curl, b, mean, anomaly, radflux, hydroflux, w_avg
